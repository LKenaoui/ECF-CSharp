@model ECF.Models.Breed

@{
    ViewData["Title"] = "Supprimer une race";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-danger">Êtes-vous sûr de vouloir supprimer cette race ?</h5>
                    
                    <div class="mb-4">
                        <dl class="row">
                            <dt class="col-sm-3">Nom</dt>
                            <dd class="col-sm-9">@Model.BreedName</dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">@Model.Description</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BreedId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
} 