@model IEnumerable<ECF.Models.Animal>

@{
    ViewData["Title"] = "Liste des animaux";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Nos animaux</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter un animal
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Search" method="get" class="d-flex">
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Rechercher un animal..." />
                <button type="submit" class="btn btn-outline-primary">Rechercher</button>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var animal in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@animal.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@(animal.Breed?.BreedName ?? "Non spécifiée")</h6>
                        <p class="card-text">@animal.Description</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@animal.AnimalId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@animal.AnimalId" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
